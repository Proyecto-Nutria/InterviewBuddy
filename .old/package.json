{
  "name": "interview-buddy",
  "version": "0.1.0",
  "description": "Discord bot to help to set up an interview between members.",
  "main": "src/index.ts",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "watch": "nodemon -e ts -w ./src -x yarn watch:serve",
    "watch:serve": "node -r ts-node/register --inspect src/index.ts",
    "lint": "eslint . --ext .ts",
    "prestart": "npm run build",
    "start": "node build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Proyecto-Nutria/interview-buddy.git"
  },
  "keywords": [
    "Bot",
    "Discord"
  ],
  "author": "Proyecto Nutria",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akotadi/nutria-bot/issues"
  },
  "homepage": "https://proyecto-nutria.github.io/",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^1.3.2",
    "@types/node": "^14.14.7",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-direct-transport": "^1.0.31",
    "@types/ws": "^7.4.0",
    "canvas": "^2.6.1",
    "discord.js": "^12.4.1",
    "dotenv": "^8.2.0",
    "node-schedule": "^1.3.3",
    "nodemailer": "^6.4.17",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0"
  }
}
